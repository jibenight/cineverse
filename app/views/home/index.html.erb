<% content_for(:title) { "Accueil" } %>

<!-- Hero Section -->
<div class="relative bg-gradient-to-b from-amber-500/10 to-transparent dark:from-amber-500/5 px-6 py-12 md:py-20">
  <div class="max-w-7xl mx-auto text-center">
    <h1 class="text-4xl md:text-5xl font-bold font-display tracking-tight">
      <span class="text-amber-500">Cine</span>Verse
    </h1>
    <p class="mt-3 text-lg text-neutral-600 dark:text-neutral-400"><%= t("pages.home.subtitle") %></p>
    <div class="mt-6 max-w-md mx-auto">
      <%= form_with url: search_path, method: :get, class: "relative" do %>
        <input type="text" name="q" placeholder="Rechercher un film..." class="w-full px-4 py-3 pl-10 rounded-xl bg-white dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 text-sm focus:ring-2 focus:ring-amber-500 focus:border-transparent" data-controller="search-autocomplete">
        <svg class="absolute left-3 top-3.5 w-4 h-4 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
      <% end %>
    </div>
  </div>
</div>

<!-- Now Playing -->
<section class="px-6 py-8 max-w-7xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-xl font-bold"><%= t("pages.home.now_playing") %></h2>
    <%= link_to t("pages.home.see_all"), now_playing_path, class: "text-sm text-amber-500 hover:text-amber-600" %>
  </div>
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
    <% @now_playing.each do |movie| %>
      <%= render MovieCardComponent.new(movie: movie) %>
    <% end %>
  </div>
</section>

<!-- Upcoming -->
<section class="px-6 py-8 max-w-7xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-xl font-bold"><%= t("pages.home.upcoming") %></h2>
    <%= link_to t("pages.home.see_all"), upcoming_movies_path, class: "text-sm text-amber-500 hover:text-amber-600" %>
  </div>
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
    <% @upcoming.each do |movie| %>
      <%= render MovieCardComponent.new(movie: movie) %>
    <% end %>
  </div>
</section>

<!-- Latest Reviews -->
<section class="px-6 py-8 max-w-7xl mx-auto">
  <h2 class="text-xl font-bold mb-6"><%= t("pages.home.latest_reviews") %></h2>
  <div class="space-y-4">
    <% @latest_reviews.each do |rating| %>
      <div class="bg-white dark:bg-[#1A1A1A] rounded-lg p-4 shadow-sm">
        <div class="flex items-start gap-3">
          <%= render UserAvatarComponent.new(user: rating.user, size: :sm) %>
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-2">
              <%= link_to rating.user.username, user_path(rating.user.username), class: "font-medium text-sm hover:text-amber-500" %>
              <span class="text-xs text-neutral-400">a note</span>
              <%= link_to rating.movie.title, movie_path(rating.movie), class: "font-medium text-sm hover:text-amber-500 truncate" %>
            </div>
            <div class="mt-1">
              <%= render RatingStarsComponent.new(score: rating.score, size: :sm) %>
            </div>
            <% if rating.review_text.present? %>
              <% if rating.spoiler? %>
                <%= render SpoilerComponent.new(content: rating.review_text) %>
              <% else %>
                <p class="mt-2 text-sm text-neutral-600 dark:text-neutral-400"><%= truncate(rating.review_text, length: 200) %></p>
              <% end %>
            <% end %>
            <span class="text-xs text-neutral-400 mt-1 block"><%= time_ago_in_words(rating.created_at) %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
