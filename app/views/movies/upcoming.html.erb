<% content_for(:title) { t("pages.movies.upcoming") } %>
<div class="max-w-7xl mx-auto px-6 py-8">
  <h1 class="text-2xl font-bold mb-6"><%= t("pages.movies.upcoming") %></h1>
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
    <% @movies.each do |movie| %>
      <div class="relative">
        <%= render MovieCardComponent.new(movie: movie) %>
        <% if movie.release_date %>
          <div class="absolute top-2 right-2">
            <%= render CountdownComponent.new(date: movie.release_date) %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="mt-8"><%== pagy_nav(@pagy) if @pagy.pages > 1 %></div>
</div>
