<%= form_with(model: [movie, rating], class: "bg-white dark:bg-[#1A1A1A] rounded-lg p-4 shadow-sm") do |f| %>
  <div class="space-y-4">
    <div data-controller="rating">
      <label class="text-sm font-medium block mb-2">Note</label>
      <%= f.hidden_field :score, data: { rating_target: "input" } %>
      <div class="flex gap-1" data-rating-target="stars">
        <% (1..5).each do |i| %>
          <% [0.5, 1.0].each do |half| %>
            <% value = i - 1 + half %>
            <button type="button" data-action="click->rating#setRating" data-rating-value-param="<%= value %>"
              class="w-5 h-5 cursor-pointer focus:outline-none">
              <svg class="w-5 h-5 <%= rating.score.to_f >= value ? 'text-amber-500' : 'text-neutral-300 dark:text-neutral-600' %>" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            </button>
          <% end %>
        <% end %>
      </div>
    </div>
    <div>
      <label class="text-sm font-medium block mb-2"><%= t("ratings.write_review") %></label>
      <%= f.text_area :review_text, rows: 3, class: "w-full rounded-lg bg-neutral-50 dark:bg-neutral-800 border-0 text-sm p-3 focus:ring-2 focus:ring-amber-500", placeholder: "Partagez votre avis..." %>
    </div>
    <div class="flex items-center gap-2">
      <%= f.check_box :spoiler, class: "rounded border-neutral-300 dark:border-neutral-600 text-amber-500 focus:ring-amber-500" %>
      <%= f.label :spoiler, t("ratings.contains_spoilers"), class: "text-sm text-neutral-600 dark:text-neutral-400" %>
    </div>
    <%= f.submit rating.persisted? ? "Modifier" : "Publier", class: "px-4 py-2 rounded-lg bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium transition cursor-pointer" %>
  </div>
<% end %>
