<div class="bg-white dark:bg-[#1A1A1A] rounded-lg p-4 shadow-sm" id="rating_<%= rating.id %>">
  <div class="flex items-start gap-3">
    <%= render UserAvatarComponent.new(user: rating.user, size: :sm) %>
    <div class="flex-1">
      <div class="flex items-center gap-2">
        <%= link_to rating.user.username, user_path(rating.user.username), class: "font-medium text-sm hover:text-amber-500" %>
        <%= render RatingStarsComponent.new(score: rating.score, size: :sm) %>
      </div>
      <% if rating.review_text.present? %>
        <% if rating.spoiler? %>
          <%= render SpoilerComponent.new(content: rating.review_text) %>
        <% else %>
          <p class="mt-2 text-sm text-neutral-600 dark:text-neutral-400"><%= rating.review_text %></p>
        <% end %>
      <% end %>
      <div class="flex items-center gap-4 mt-2" id="rating_<%= rating.id %>_likes">
        <%= render partial: "ratings/likes", locals: { rating: rating } %>
      </div>
    </div>
  </div>
</div>
