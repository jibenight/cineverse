<% content_for(:title) { "Contact" } %>
<div class="max-w-3xl mx-auto px-6 py-12">
  <h1 class="text-3xl font-bold font-display mb-6">Contact</h1>

  <div class="bg-white dark:bg-[#1A1A1A] rounded-lg p-6 shadow-sm">
    <%= form_with url: contact_path, method: :post, class: "space-y-4" do %>
      <div>
        <label class="text-sm font-medium block mb-1">Nom</label>
        <input type="text" name="name" required class="w-full rounded-lg bg-neutral-50 dark:bg-neutral-800 border-0 text-sm p-3 focus:ring-2 focus:ring-amber-500">
      </div>
      <div>
        <label class="text-sm font-medium block mb-1">Email</label>
        <input type="email" name="email" required class="w-full rounded-lg bg-neutral-50 dark:bg-neutral-800 border-0 text-sm p-3 focus:ring-2 focus:ring-amber-500">
      </div>
      <div>
        <label class="text-sm font-medium block mb-1">Sujet</label>
        <select name="subject" class="w-full rounded-lg bg-neutral-50 dark:bg-neutral-800 border-0 text-sm p-3 focus:ring-2 focus:ring-amber-500">
          <option>Question generale</option>
          <option>Signaler un bug</option>
          <option>Suggestion</option>
          <option>Partenariat</option>
          <option>Autre</option>
        </select>
      </div>
      <div>
        <label class="text-sm font-medium block mb-1">Message</label>
        <textarea name="message" rows="5" required class="w-full rounded-lg bg-neutral-50 dark:bg-neutral-800 border-0 text-sm p-3 focus:ring-2 focus:ring-amber-500"></textarea>
      </div>
      <button type="submit" class="px-6 py-3 rounded-lg bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium transition">Envoyer</button>
    <% end %>
  </div>
</div>
