<% content_for(:title) { t("nav.notifications") } %>
<div class="max-w-3xl mx-auto px-6 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold"><%= t("nav.notifications") %></h1>
    <% if @notifications.any? %>
      <%= button_to "Tout marquer comme lu", mark_all_read_notifications_path, method: :post, class: "text-sm text-amber-500 hover:text-amber-600" %>
    <% end %>
  </div>

  <% if @notifications.any? %>
    <div class="space-y-2">
      <% @notifications.each do |notification| %>
        <div class="flex items-start gap-3 p-4 rounded-lg transition <%= notification.read? ? 'bg-white dark:bg-[#1A1A1A]' : 'bg-amber-50 dark:bg-amber-500/5 border-l-2 border-amber-500' %>">
          <% if notification.actor %>
            <%= render UserAvatarComponent.new(user: notification.actor, size: :sm) %>
          <% end %>
          <div class="flex-1 min-w-0">
            <p class="text-sm"><%= notification.message %></p>
            <span class="text-xs text-neutral-400"><%= time_ago_in_words(notification.created_at) %></span>
          </div>
          <% unless notification.read? %>
            <%= button_to mark_read_notification_path(notification), method: :patch, class: "text-xs text-neutral-400 hover:text-amber-500" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="mt-6"><%== pagy_nav(@pagy) if @pagy.pages > 1 %></div>
  <% else %>
    <div class="text-center py-12">
      <svg class="w-12 h-12 mx-auto text-neutral-300 dark:text-neutral-600 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/></svg>
      <p class="text-neutral-400 text-sm">Aucune notification.</p>
    </div>
  <% end %>
</div>
