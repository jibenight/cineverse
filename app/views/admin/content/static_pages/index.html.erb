<% content_for(:title) { "Pages statiques" } %>
<% content_for(:page_title) { "Pages statiques" } %>

<div class="mb-6">
  <span class="text-sm text-neutral-400"><%= @pages.size %> pages</span>
</div>

<div class="bg-[#1A1A1A] rounded-lg border border-neutral-800 overflow-hidden">
  <table class="w-full">
    <thead>
      <tr class="border-b border-neutral-800 text-left">
        <th class="px-4 py-3 text-xs font-medium text-neutral-400 uppercase tracking-wider">Titre</th>
        <th class="px-4 py-3 text-xs font-medium text-neutral-400 uppercase tracking-wider">Slug</th>
        <th class="px-4 py-3 text-xs font-medium text-neutral-400 uppercase tracking-wider">Derniere MAJ</th>
        <th class="px-4 py-3 text-xs font-medium text-neutral-400 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-neutral-800">
      <% @pages.each do |page| %>
        <tr class="hover:bg-neutral-800/50 transition">
          <td class="px-4 py-3 text-sm font-medium"><%= page.title %></td>
          <td class="px-4 py-3 text-sm text-neutral-400"><%= page.slug %></td>
          <td class="px-4 py-3 text-sm text-neutral-400"><%= l(page.updated_at, format: :short) %></td>
          <td class="px-4 py-3">
            <%= link_to "Modifier", edit_admin_content_static_page_path(page), class: "text-xs text-amber-500 hover:text-amber-400" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
