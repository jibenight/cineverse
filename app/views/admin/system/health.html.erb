<% content_for(:title) { "Sante du systeme" } %>
<% content_for(:page_title) { "Sante du systeme" } %>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <% @checks.each do |name, check| %>
    <div class="bg-[#1A1A1A] rounded-lg p-6 border border-neutral-800">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-sm font-semibold uppercase"><%= name %></h3>
        <% if check[:status] == "ok" %>
          <span class="w-3 h-3 rounded-full bg-green-500"></span>
        <% else %>
          <span class="w-3 h-3 rounded-full bg-red-500"></span>
        <% end %>
      </div>
      <div class="space-y-2">
        <div class="flex justify-between text-sm">
          <span class="text-neutral-400">Statut</span>
          <% if check[:status] == "ok" %>
            <span class="text-green-400">OK</span>
          <% else %>
            <span class="text-red-400">Erreur</span>
          <% end %>
        </div>
        <div class="flex justify-between text-sm">
          <span class="text-neutral-400">Message</span>
          <span class="text-neutral-300"><%= check[:message] %></span>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-8">
  <div class="bg-[#1A1A1A] rounded-lg p-6 border border-neutral-800">
    <h3 class="text-sm font-semibold mb-4">Informations systeme</h3>
    <div class="grid grid-cols-2 gap-4 text-sm">
      <div class="flex justify-between">
        <span class="text-neutral-400">Ruby</span>
        <span><%= RUBY_VERSION %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-neutral-400">Rails</span>
        <span><%= Rails.version %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-neutral-400">Environnement</span>
        <span><%= Rails.env %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-neutral-400">Heure serveur</span>
        <span><%= Time.current.strftime("%Y-%m-%d %H:%M:%S %Z") %></span>
      </div>
    </div>
  </div>
</div>
