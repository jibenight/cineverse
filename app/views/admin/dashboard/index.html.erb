<% content_for(:title) { "Tableau de bord" } %>
<% content_for(:page_title) { "Tableau de bord" } %>

<!-- KPI Cards -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Users KPI -->
  <div class="bg-[#1A1A1A] rounded-lg p-5 border border-neutral-800">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-xs text-neutral-400 uppercase tracking-wider">Utilisateurs</p>
        <p class="text-2xl font-bold mt-1"><%= number_with_delimiter(@total_users) %></p>
      </div>
      <div class="w-10 h-10 rounded-lg bg-blue-500/10 flex items-center justify-center text-blue-400">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
      </div>
    </div>
    <div class="mt-3 flex items-center text-xs">
      <span class="text-green-400">+<%= @new_users_today %></span>
      <span class="text-neutral-500 ml-1">aujourd'hui</span>
    </div>
  </div>

  <!-- Reviews KPI -->
  <div class="bg-[#1A1A1A] rounded-lg p-5 border border-neutral-800">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-xs text-neutral-400 uppercase tracking-wider">Critiques</p>
        <p class="text-2xl font-bold mt-1"><%= number_with_delimiter(@total_ratings) %></p>
      </div>
      <div class="w-10 h-10 rounded-lg bg-amber-500/10 flex items-center justify-center text-amber-400">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/></svg>
      </div>
    </div>
    <div class="mt-3 flex items-center text-xs">
      <span class="text-green-400">+<%= @new_ratings_today %></span>
      <span class="text-neutral-500 ml-1">aujourd'hui</span>
    </div>
  </div>

  <!-- Movies KPI -->
  <div class="bg-[#1A1A1A] rounded-lg p-5 border border-neutral-800">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-xs text-neutral-400 uppercase tracking-wider">Films</p>
        <p class="text-2xl font-bold mt-1"><%= number_with_delimiter(@total_movies) %></p>
      </div>
      <div class="w-10 h-10 rounded-lg bg-purple-500/10 flex items-center justify-center text-purple-400">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"/></svg>
      </div>
    </div>
    <div class="mt-3 flex items-center text-xs">
      <span class="text-neutral-500"><%= @upcoming_movies_count %> a venir</span>
    </div>
  </div>

  <!-- Revenue KPI -->
  <div class="bg-[#1A1A1A] rounded-lg p-5 border border-neutral-800">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-xs text-neutral-400 uppercase tracking-wider">Revenus affiliation</p>
        <p class="text-2xl font-bold mt-1"><%= number_to_currency(@total_revenue, unit: "EUR", format: "%n %u") %></p>
      </div>
      <div class="w-10 h-10 rounded-lg bg-green-500/10 flex items-center justify-center text-green-400">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
      </div>
    </div>
    <div class="mt-3 flex items-center text-xs">
      <span class="text-green-400">+<%= @clicks_today %></span>
      <span class="text-neutral-500 ml-1">clics aujourd'hui</span>
    </div>
  </div>
</div>

<!-- Charts -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
  <!-- User Registrations Chart -->
  <div class="bg-[#1A1A1A] rounded-lg p-5 border border-neutral-800">
    <h3 class="text-sm font-semibold mb-4">Inscriptions (30 derniers jours)</h3>
    <div id="registrations-chart" class="h-64">
      <% if defined?(Chartkick) && @registrations_by_day.present? %>
        <%= line_chart @registrations_by_day, colors: ["#f59e0b"], library: { backgroundColor: "transparent" } %>
      <% else %>
        <div class="flex items-center justify-center h-full text-neutral-500 text-sm">Graphique des inscriptions</div>
      <% end %>
    </div>
  </div>

  <!-- Ratings Chart -->
  <div class="bg-[#1A1A1A] rounded-lg p-5 border border-neutral-800">
    <h3 class="text-sm font-semibold mb-4">Critiques (30 derniers jours)</h3>
    <div id="ratings-chart" class="h-64">
      <% if defined?(Chartkick) && @ratings_by_day.present? %>
        <%= line_chart @ratings_by_day, colors: ["#8b5cf6"], library: { backgroundColor: "transparent" } %>
      <% else %>
        <div class="flex items-center justify-center h-full text-neutral-500 text-sm">Graphique des critiques</div>
      <% end %>
    </div>
  </div>
</div>

<!-- Recent Activity & Moderation -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <!-- Recent Activity -->
  <div class="bg-[#1A1A1A] rounded-lg p-5 border border-neutral-800">
    <h3 class="text-sm font-semibold mb-4">Activite recente</h3>
    <div class="space-y-3">
      <% if @recent_activities.present? %>
        <% @recent_activities.each do |activity| %>
          <div class="flex items-center gap-3 text-sm">
            <div class="w-8 h-8 rounded-full bg-neutral-800 flex items-center justify-center text-xs font-bold"><%= activity.admin&.username&.first&.upcase %></div>
            <div class="flex-1 min-w-0">
              <p class="truncate"><%= activity.action %></p>
              <span class="text-xs text-neutral-500"><%= time_ago_in_words(activity.created_at) %></span>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-sm text-neutral-500">Aucune activite recente.</p>
      <% end %>
    </div>
  </div>

  <!-- Pending Moderation -->
  <div class="bg-[#1A1A1A] rounded-lg p-5 border border-neutral-800">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-sm font-semibold">Signalements en attente</h3>
      <a href="<%= admin_moderation_reports_path %>" class="text-xs text-amber-500 hover:text-amber-400">Voir tout</a>
    </div>
    <div class="space-y-3">
      <% if @pending_reports.present? %>
        <% @pending_reports.each do |report| %>
          <div class="flex items-center gap-3 text-sm">
            <span class="w-2 h-2 rounded-full bg-red-500 flex-shrink-0"></span>
            <div class="flex-1 min-w-0">
              <p class="truncate"><%= report.reason %></p>
              <span class="text-xs text-neutral-500">par <%= report.reporter&.username %> - <%= time_ago_in_words(report.created_at) %></span>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-sm text-neutral-500">Aucun signalement en attente.</p>
      <% end %>
    </div>
  </div>
</div>
