<% content_for(:title) { "Connexion" } %>

<div class="flex items-center justify-center min-h-[80vh] px-4">
  <div class="w-full max-w-md">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-display font-bold text-amber-500">CinéVerse</h1>
      <p class="text-neutral-500 dark:text-neutral-400 mt-2">Connectez-vous à votre compte</p>
    </div>

    <div class="bg-white dark:bg-[#1A1A1A] rounded-2xl border border-neutral-200 dark:border-neutral-800 p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="space-y-5">
          <div>
            <%= f.label :email, "Email", class: "block text-sm font-medium mb-1.5" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "vous@exemple.com",
                class: "w-full px-4 py-2.5 rounded-lg bg-neutral-50 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 text-sm focus:ring-2 focus:ring-amber-500 focus:border-transparent outline-none transition" %>
          </div>

          <div>
            <%= f.label :password, "Mot de passe", class: "block text-sm font-medium mb-1.5" %>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Votre mot de passe",
                class: "w-full px-4 py-2.5 rounded-lg bg-neutral-50 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 text-sm focus:ring-2 focus:ring-amber-500 focus:border-transparent outline-none transition" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center gap-2">
              <%= f.check_box :remember_me, class: "rounded border-neutral-300 dark:border-neutral-600 text-amber-500 focus:ring-amber-500" %>
              <%= f.label :remember_me, "Se souvenir de moi", class: "text-sm text-neutral-600 dark:text-neutral-400" %>
            </div>
          <% end %>

          <div>
            <%= f.submit "Se connecter", class: "w-full py-2.5 rounded-lg bg-amber-500 hover:bg-amber-600 text-white font-medium text-sm transition cursor-pointer" %>
          </div>
        </div>
      <% end %>

      <div class="mt-6 pt-6 border-t border-neutral-200 dark:border-neutral-700">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
