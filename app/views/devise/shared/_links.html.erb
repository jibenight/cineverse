<div class="flex flex-col gap-2 text-center">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Se connecter", new_session_path(resource_name), class: "text-sm text-amber-500 hover:text-amber-400 transition" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Créer un compte", new_registration_path(resource_name), class: "text-sm text-amber-500 hover:text-amber-400 transition" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "text-sm text-neutral-500 dark:text-neutral-400 hover:text-amber-500 transition" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Renvoyer les instructions de confirmation", new_confirmation_path(resource_name), class: "text-sm text-neutral-500 dark:text-neutral-400 hover:text-amber-500 transition" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Renvoyer les instructions de déverrouillage", new_unlock_path(resource_name), class: "text-sm text-neutral-500 dark:text-neutral-400 hover:text-amber-500 transition" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div class="relative my-4">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-neutral-200 dark:border-neutral-700"></div>
      </div>
      <div class="relative flex justify-center text-sm">
        <span class="px-4 bg-white dark:bg-[#121212] text-neutral-500 dark:text-neutral-400">ou continuer avec</span>
      </div>
    </div>

    <div class="flex flex-col gap-3">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "flex items-center justify-center gap-3 w-full px-4 py-2.5 rounded-lg text-sm font-medium transition cursor-pointer #{omniauth_provider_classes(provider)}" do %>
          <%= render omniauth_provider_icon(provider) %>
          <span>Continuer avec <%= omniauth_provider_label(provider) %></span>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
