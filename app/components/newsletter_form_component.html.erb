<div id="newsletter_form">
  <%= form_with url: newsletter_subscribe_path, method: :post, data: { turbo_frame: "newsletter_form" }, class: "flex gap-2" do |f| %>
    <%= invisible_captcha %>
    <input type="email" name="email" placeholder="<%= I18n.t('newsletter.email_placeholder') %>" required
           class="flex-1 px-4 py-2 rounded-lg bg-neutral-100 dark:bg-neutral-800 border-0 text-sm text-neutral-900 dark:text-neutral-100 placeholder-neutral-400 focus:ring-2 focus:ring-amber-500">
    <input type="text" name="first_name" placeholder="<%= I18n.t('newsletter.first_name_placeholder') %>"
           class="hidden md:block w-32 px-4 py-2 rounded-lg bg-neutral-100 dark:bg-neutral-800 border-0 text-sm text-neutral-900 dark:text-neutral-100 placeholder-neutral-400 focus:ring-2 focus:ring-amber-500">
    <button type="submit" class="px-4 py-2 rounded-lg bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium transition">
      <%= I18n.t("newsletter.submit") %>
    </button>
  <% end %>
</div>
