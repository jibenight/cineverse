<div id="newsletter_form">
  <%= form_with url: newsletter_subscribe_path, method: :post, data: { turbo_frame: "newsletter_form" }, class: "flex flex-wrap gap-2" do |f| %>
    <%= invisible_captcha %>
    <input type="email" name="email" placeholder="<%= I18n.t('newsletter.email_placeholder') %>" required
           class="w-full px-4 py-2 rounded-lg bg-neutral-100 dark:bg-neutral-800 border-0 text-sm text-neutral-900 dark:text-neutral-100 placeholder-neutral-400 focus:ring-2 focus:ring-amber-500">
    <button type="submit" class="w-full px-4 py-2 rounded-lg bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium transition">
      <%= I18n.t("newsletter.submit") %>
    </button>
  <% end %>
</div>
