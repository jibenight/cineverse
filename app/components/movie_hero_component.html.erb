<div class="relative w-full h-[400px] md:h-[500px] overflow-hidden">
  <% if backdrop_url %>
    <img src="<%= backdrop_url %>" alt="<%= @movie.title %>" class="absolute inset-0 w-full h-full object-cover">
  <% end %>
  <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent"></div>
  <div class="absolute bottom-0 left-0 right-0 p-6 md:p-12">
    <div class="max-w-7xl mx-auto flex gap-6 items-end">
      <img src="<%= poster_url %>" alt="<%= @movie.title %>" class="hidden md:block w-40 rounded-lg shadow-lg -mb-12 relative z-10">
      <div class="flex-1">
        <h1 class="text-3xl md:text-4xl font-bold text-white"><%= @movie.title %></h1>
        <div class="flex items-center gap-3 mt-2 text-neutral-300 text-sm">
          <% if @movie.release_date %>
            <span><%= @movie.release_date.year %></span>
          <% end %>
          <% if runtime_display %>
            <span>&middot;</span>
            <span><%= runtime_display %></span>
          <% end %>
          <% @movie.genres.each do |genre| %>
            <span class="px-2 py-0.5 rounded-full bg-white/10 text-xs"><%= genre.name %></span>
          <% end %>
        </div>
        <% if @movie.vote_average&.positive? %>
          <div class="flex items-center gap-2 mt-3">
            <div class="flex items-center gap-1">
              <svg class="w-5 h-5 text-amber-500" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
              <span class="text-white font-semibold text-lg"><%= @movie.vote_average.round(1) %></span>
            </div>
            <span class="text-neutral-400 text-sm">(<%= @movie.ratings_count || 0 %> votes)</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
