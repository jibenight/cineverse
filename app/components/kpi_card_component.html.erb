<div class="rounded-lg bg-white dark:bg-neutral-900 p-4 shadow-sm">
  <div class="flex items-center justify-between mb-2">
    <span class="text-sm text-neutral-500 dark:text-neutral-400"><%= @label %></span>
    <% if @icon %>
      <span class="text-lg"><%= @icon %></span>
    <% end %>
  </div>
  <p class="text-2xl font-bold text-neutral-900 dark:text-neutral-100"><%= number_with_delimiter(@value) %></p>
  <% if @delta %>
    <div class="flex items-center gap-1 mt-1">
      <span class="text-xs font-medium <%= delta_positive? ? 'text-green-600' : 'text-red-600' %>">
        <%= delta_positive? ? '↑' : '↓' %> <%= delta_display %>
      </span>
      <span class="text-xs text-neutral-400"><%= @delta_period %></span>
    </div>
  <% end %>
</div>
